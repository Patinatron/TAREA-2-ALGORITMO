	Escribir " Escriba un numero del 1 al 7";
	leer num1;
	
	Segun num1 Hacer
		1:Escribir "Lunes";
		2:Escribir"Martes";
		3:Escribir "Miércoles";
		4:Escribir "Jueves";
		5:Escribir "Viernes";
		6:Escribir "Sábado";
		7:Escribir "Domingo";
